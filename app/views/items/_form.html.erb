<% form_for(item) do |f| %>
<%= error_messages_for(item) %>

<dl>
  <dt>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </dt>
  <dd>
    <%= f.label :details %><br />
    <%= f.text_field :details %>
  </dd>
  <dd>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </dd>
  <dd>
    <%= f.check_box :active %><%= f.label :active %>
  </dd>
  <dt>
    <%= f.submit %>
  </dt>
</dl>
<% end %>
