<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Details</th>
    <th>Price</th>
    <th>Position</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.details %></td>
    <td><%= item.price %></td>
    <td><%= item.position %></td>
    <td><%= item.active %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

