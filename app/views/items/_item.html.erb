<% content_tag_for :dl, item, :class => (item.active? ? "" : "inactive") do %>
  <dt><%= item.name %></dt>
  <dd><%= item.details %></dd>
  <dd><%= small_cents number_to_currency(item.price) %></dd>
  <% if admin? %>
    <%= link_to t(:'admin.button.delete'), item, :method => :delete -%><%= link_to t(:'admin.button.edit'), edit_item_path(item) -%>
    
  <% end -%>
<% end -%>